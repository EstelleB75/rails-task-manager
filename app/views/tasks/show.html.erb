<h1> <%= @task.title %> </h1>

<div>
 <p> <%= @task.details %> </p>
</div>

<div>
<%= form_for(@task) do |f|%>
<%= f.label :completed %>
<%= f.check_box :completed %>
<%= f.submit %>
<% end %>
</div>

<br>


<%= link_to("Back to list", tasks_path) %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to("Edit the task", edit_task_path(@task)) %>
